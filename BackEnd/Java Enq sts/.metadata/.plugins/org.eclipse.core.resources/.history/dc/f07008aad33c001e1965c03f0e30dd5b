package com.example.services;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;

import com.example.entity.Enquiry;
import com.example.repository.EnquriyRepository;

@Service
public class EnquiryImpl implements EnquiryService {

	@Autowired
	private EnquriyRepository e;
	
	
	@PostMapping("api/new_enquiry")
	public void aftersubmit(@RequestBody Enquiry enquiry) {
		e.save(enquiry);
	}
	
	@DeleteMapping("/api/del_enquiry/{id}")
	public void afterdelete(@PathVariable int id)
	{
		e.deleteById(id);
	}
	
	@GetMapping("getall")
	public List<Enquiry> getall()
	{
		return e.findAll();
	}
	
	@GetMapping("api/getById/{id}")
	public Optional<Enquiry> getbyid(@PathVariable int id)
	{
		return e.findById(id);
	}
	
}
